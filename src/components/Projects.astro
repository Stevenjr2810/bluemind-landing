---
import Container from "../components/ui/Container.astro";
import ProjectsGallery from "../components/ui/ProjectsGallery.jsx";
import albums from "../data/albums.json";
---

<section
  id="projects"
  class="bg-animated-hero relative overflow-hidden text-white"
>
  <!-- Gradiente radial overlay -->
  <div
    aria-hidden="true"
    class="pointer-events-none absolute inset-0 bg-[radial-gradient(60%_40%_at_50%_-20%,rgba(236,72,153,0.25),transparent)]"
  >
  </div>

  <!-- Formas SVG animadas -->
  <div class="animated-shapes">
    <!-- Blob 1 - Rosa -->
    <svg
      class="shape-blob blob-1"
      viewBox="0 0 200 200"
      xmlns="http://www.w3.org/2000/svg"
    >
      <defs>
        <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#FF1493;stop-opacity:1"></stop>
          <stop offset="100%" style="stop-color:#FF69B4;stop-opacity:1"></stop>
        </linearGradient>
      </defs>
      <path
        fill="url(#grad1)"
        d="M47.1,-57.7C59.9,-45.8,68.5,-29.2,71.2,-11.9C73.9,5.4,70.7,23.4,61.3,37.9C51.9,52.4,36.3,63.4,19.1,68.1C1.9,72.8,-16.9,71.2,-33.5,64.1C-50.1,57,-64.5,44.4,-71.3,28.3C-78.1,12.2,-77.3,-7.4,-70.8,-23.8C-64.3,-40.2,-52.1,-53.4,-38.1,-65C-24.1,-76.6,-8.4,-86.6,5.2,-92.6C18.8,-98.6,34.3,-69.6,47.1,-57.7Z"
        transform="translate(100 100)"></path>
    </svg>

    <!-- Blob 2 - Morado -->
    <svg
      class="shape-blob blob-2"
      viewBox="0 0 200 200"
      xmlns="http://www.w3.org/2000/svg"
    >
      <defs>
        <linearGradient id="grad2" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#9370DB;stop-opacity:1"></stop>
          <stop offset="100%" style="stop-color:#8A2BE2;stop-opacity:1"></stop>
        </linearGradient>
      </defs>
      <path
        fill="url(#grad2)"
        d="M39.5,-52.6C49.5,-40.8,55.1,-26.1,58.5,-10.7C61.9,4.7,63.1,20.8,56.8,33.4C50.5,46,36.7,55.1,21.8,60.3C6.9,65.5,-9.1,66.8,-23.8,62.3C-38.5,57.8,-51.9,47.5,-60.4,33.9C-68.9,20.3,-72.5,3.4,-69.3,-12.1C-66.1,-27.6,-56.1,-41.7,-43.3,-53.1C-30.5,-64.5,-15.2,-73.2,0.3,-73.6C15.8,-74,29.5,-64.4,39.5,-52.6Z"
        transform="translate(100 100)"></path>
    </svg>

    <!-- Blob 3 - Naranja -->
    <svg
      class="shape-blob blob-3"
      viewBox="0 0 200 200"
      xmlns="http://www.w3.org/2000/svg"
    >
      <defs>
        <linearGradient id="grad3" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#FFD700;stop-opacity:1"></stop>
          <stop offset="100%" style="stop-color:#FFA500;stop-opacity:1"></stop>
        </linearGradient>
      </defs>
      <path
        fill="url(#grad3)"
        d="M44.3,-58.4C56.8,-48.2,65.6,-33.1,68.9,-17C72.2,-0.9,70,16.2,63.2,30.8C56.4,45.4,45,57.5,31.2,64.8C17.4,72.1,1.2,74.6,-14.5,72.3C-30.2,70,-45.4,62.9,-56.9,51.8C-68.4,40.7,-76.2,25.6,-77.5,9.8C-78.8,-6,-73.6,-22.5,-64.3,-36.2C-55,-49.9,-41.6,-60.8,-27.1,-70.3C-12.6,-79.8,2.9,-87.9,18.4,-86.1C33.9,-84.3,31.8,-68.6,44.3,-58.4Z"
        transform="translate(100 100)"></path>
    </svg>

    <!-- Blob 4 - Cyan -->
    <svg
      class="shape-blob blob-4"
      viewBox="0 0 200 200"
      xmlns="http://www.w3.org/2000/svg"
    >
      <defs>
        <linearGradient id="grad4" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#00CED1;stop-opacity:1"></stop>
          <stop offset="100%" style="stop-color:#20B2AA;stop-opacity:1"></stop>
        </linearGradient>
      </defs>
      <path
        fill="url(#grad4)"
        d="M35.8,-48.9C45.6,-39.3,52.3,-26.9,56.8,-13.2C61.3,0.5,63.6,15.5,59.3,28.7C55,41.9,44.1,53.3,31.1,59.8C18.1,66.3,3,68,-11.7,66.5C-26.4,65,-40.7,60.3,-51.8,51.3C-62.9,42.3,-70.8,29,-73.3,14.7C-75.8,0.4,-73,-14.9,-65.8,-27.7C-58.6,-40.5,-46.9,-50.8,-34.3,-59.9C-21.7,-69,-8.5,-76.9,3.2,-81.3C14.9,-85.7,26,-85.5,35.8,-48.9Z"
        transform="translate(100 100)"></path>
    </svg>
  </div>

  <!-- Puntos decorativos -->
  <div class="decorative-dots">
    <div class="dot"></div>
    <div class="dot"></div>
    <div class="dot"></div>
    <div class="dot"></div>
    <div class="dot"></div>
    <div class="dot"></div>
  </div>

  <!-- Círculos de borde -->
  <div class="circle-outline circle-1"></div>
  <div class="circle-outline circle-2"></div>

  <!-- Patrón de circuitos (opcional) -->
  <div class="circuit-pattern"></div>

  <Container class="py-16 sm:py-24">
    <header class="mb-8 max-w-3xl">
      <span
        class="inline-flex items-center gap-2 rounded-full border border-white/50 bg-white/20 px-3 py-1 text-xs/6 text-white-600"
      >
        <span class="h-1.5 w-1.5 rounded-full bg-pink-400"></span>
        Explore our recents projects
      </span>
      <h2 class="mt-4 text-3xl font-bold tracking-tight sm:text-4xl text-white">
        Projects
      </h2>
      <p class="mt-3 text-white/70">
        Albums with photos and videos from classes, prototypes and competitions.
        Click an album to open the gallery.
      </p>
    </header>

    <ProjectsGallery client:load albums={albums} />
  </Container>
</section>
