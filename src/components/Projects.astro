---
import Container from "../components/ui/Container.astro";
import ProjectsGallery from "../components/ui/ProjectsGallery.jsx";
import albums from "../data/albums.json";
---

<section id="projects" class="bg-geometric-pattern text-white">
  <Container class="py-16 sm:py-24">
    <header class="mb-8 max-w-3xl">
      <span
        class="inline-flex items-center gap-2 rounded-full border border-white/50 bg-white/20 px-3 py-1 text-xs/6 text-white-600"
      >
        <span class="h-1.5 w-1.5 rounded-full bg-pink-400"></span>
        Explore our recents projects
      </span>
      <h2 class="mt-4 text-3xl font-bold tracking-tight sm:text-4xl text-white">
        Projects
      </h2>
      <p class="mt-3 text-white/70">
        Albums with photos and videos from classes, prototypes and competitions.
        Click an album to open the gallery.
      </p>
    </header>

    <ProjectsGallery client:load albums={albums} />
  </Container>
</section>
