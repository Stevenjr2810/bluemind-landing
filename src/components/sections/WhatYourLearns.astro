---
import Container from "../ui/Container.astro";
import items from "../../data/learn.json";
---

<section id="features" class="bg-white text-slate-900">
  <Container class="py-16 sm:py-24">
    <header class="max-w-3xl">
      <p class="text-sm font-semibold text-pink-600">What you will learn</p>
      <h2 class="mt-2 text-3xl font-bold tracking-tight sm:text-4xl">
        Practical skills to build, code and innovate
      </h2>
      <p class="mt-4 text-slate-600">
        We turn curiosity into projects. Learn by doing with guided activities
        in electronics, programming, math and creative construction.
      </p>
    </header>

    <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        items.map(({ title, desc, image }) => (
          <article class="rounded-2xl border border-slate-200 bg-white shadow-sm transition hover:shadow-md flex flex-col md:flex-row h-[300px]">
            {/* Contenedor de la imagen */}
            {image && (
              <div class="md:w-1/2 w-full h-full overflow-hidden rounded-t-2xl md:rounded-l-2xl md:rounded-tr-none">
                <img
                  src={image}
                  alt={title}
                  class="h-full w-full object-cover"
                />
              </div>
            )}

            {/* Contenedor del texto */}
            <div class="p-6 flex flex-col justify-center md:w-1/2 w-full">
              <h3 class="mt-0 text-lg font-semibold">{title}</h3>
              <p class="mt-2 text-sm text-slate-600">{desc}</p>
            </div>
          </article>
        ))
      }
    </div>
  </Container>
</section>
