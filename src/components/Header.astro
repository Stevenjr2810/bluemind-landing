---
/** Config editable */
const brand = {
  name: "Bluemind Skills",
  logo: "logo.png",
};

const navItems = [
  { label: "Home", href: "#home" },
  { label: "Learn", href: "#features" },
  { label: "Projects", href: "#projects" },
  { label: "Flyers", href: "#flyers" },
  { label: "Contact", href: "#about" },
];

const cta = { label: "Join a Class", href: "#about" };
---

<header
  class="sticky top-0 z-50 w-full border-b border-white/10 bg-black/50 backdrop-blur supports-[backdrop-filter]:bg-black/40"
>
  <div
    class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8"
  >
    <a href="#home" class="flex items-center gap-2 group">
      {
        brand.logo ? (
          <img
            src={brand.logo}
            alt={brand.name}
            class="h-8 w-8 transition-transform duration-200 group-hover:rotate-3"
          />
        ) : null
      }
      <span class="text-lg font-semibold text-white group-hover:text-pink-400"
        >{brand.name}</span
      >
    </a>

    <nav
      class="hidden items-center gap-8 text-sm font-medium sm:flex"
      aria-label="Primary"
    >
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="text-white/80 transition-colors hover:text-pink-400"
          >
            {item.label}
          </a>
        ))
      }
    </nav>

    <a
      href={cta.href}
      class="hidden sm:inline-flex items-center rounded-full bg-pink-500 px-5 py-2.5 text-sm font-semibold text-white shadow-md transition-transform hover:scale-105 hover:bg-pink-400"
    >
      {cta.label}
    </a>

    <button
      id="menuBtn"
      type="button"
      class="inline-flex items-center justify-center rounded-md p-2 text-white hover:bg-white/10 focus:outline-none sm:hidden"
      aria-label="Open menu"
      aria-haspopup="true"
      aria-expanded="false"
      aria-controls="mobileNav"
    >
      <svg
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <div
    id="mobileNav"
    class="hidden border-t border-white/10 bg-black/90 sm:hidden"
    role="dialog"
    aria-modal="true"
  >
    <nav class="mx-auto max-w-7xl px-4 py-4" aria-label="Mobile">
      <ul class="space-y-2">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="block rounded-lg px-3 py-2 text-sm font-medium text-white/90 hover:bg-white/10"
                data-close-nav
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
      <a
        href={cta.href}
        class="mt-3 inline-flex w-full items-center justify-center rounded-full bg-pink-500 px-5 py-2.5 text-sm font-semibold text-white hover:bg-pink-400"
        data-close-nav
      >
        {cta.label}
      </a>
    </nav>
  </div>

  <script is:inline>
    const btn = document.getElementById("menuBtn");
    const nav = document.getElementById("mobileNav");
    if (btn && nav) {
      const toggle = () => {
        const open = nav.classList.contains("hidden");
        nav.classList.toggle("hidden", !open);
        btn.setAttribute("aria-expanded", String(open));
        document.documentElement.style.overflow = open ? "hidden" : "";
      };
      btn.addEventListener("click", toggle);
      nav.querySelectorAll("[data-close-nav]").forEach((el) => {
        el.addEventListener("click", () => {
          nav.classList.add("hidden");
          btn.setAttribute("aria-expanded", "false");
          document.documentElement.style.overflow = "";
        });
      });
    }
  </script>
</header>
