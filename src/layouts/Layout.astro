---
/* Imports de componentes globales */
import Seo from "../components/Seo.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

/* Importa estilos globales desde el frontmatter (NO uses <link>) */
import "../styles/tailwind.css";
import "../styles/global.css";

/* Props opcionales del layout */
interface Props {
  title?: string;
  description?: string;
  noindex?: boolean;
}
const {
  title = "Bluemind Skills",
  description = "Personalized robotics & coding training for kids and adults.",
  noindex = false,
} = Astro.props as Props;
---
<html lang="en" class="scroll-smooth">
  <head>
    <Seo {title} {description} {noindex} />
  </head>
  <body class="min-h-dvh bg-black text-white antialiased">
    <Header />
    <main class="relative">
      <slot />
    </main>
    <Footer />
  </body>
</html>
